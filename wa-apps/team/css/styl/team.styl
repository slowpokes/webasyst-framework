@import "nib";

$pad = 10px
$rem = 14

$link_c = #03c

// Calendar, many used variables
$event_max_count = 4
$event_h = 22px
$event_pad = 2px
$row_h = ($event_h + $event_pad * 2)
$week_h = $row_h * $event_max_count

#wa-app
    overflow inherit

    &:before
    &:after
        display none

// PAGER
ul.pager
    li
        display inline-block
        font-weight normal
        line-height 1em
        list-style-type none
        margin 0 10px 0 0
        padding 5px
        text-align left

// LAYOUT
.tc-layout
    display table
    width 100%

    &.inline
        width auto
        max-width 100%

    & > .tc-column
        display table-cell
        vertical-align top

        &.middle
            vertical-align middle

        &.right
            text-align right

.todo
    border 1px dashed #963 !important
    box-sizing border-box

.t-app-wrapper
    display table
    width: 100%
    table-layout fixed

    .t-sidebar-wrapper
    .t-content-wrapper
        float none
        display table-cell
        vertical-align top

    .t-sidebar-wrapper
        margin: 0
        padding: 0

        @import "./sidebar.styl"

    .t-content-wrapper
        margin: 0
        padding: $pad ($pad * 1.5)

        .shadowed
            margin 0

        .t-content-block
            position relative
            min-height 600px

            .t-back-link
                position relative
                top -4px
                padding: 4px
                font-size: 11px;
                background: #eee;
                color: #777;
                border-radius: 4px;
                white-space nowrap

            .router-loading-indicator
                vertical-align baseline
                margin 0 0 0 4px;

