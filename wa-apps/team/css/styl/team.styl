.t-layout
    display table
    width 100%

    & > .t-column
        display table-cell
        vertical-align top

        &.right
            text-align right

.t-info-notice-wrapper
    position relative
    border 1px solid #eed
    margin 1em 0
    padding 1em 3em 1em 1em

    background #ffffe0
    color #555
    font-size 0.9em
    line-height 1.3em

    p
        margin 1em 0 0

        &:first-child
            margin-top 0

    .t-info-notice-toggle
        position absolute
        top 50%
        right .5em
        width 1em
        height 1em
        padding .5em
        margin -1em 0 0
        color: #333;
        line-height 1em
        text-align center
        cursor pointer

body
    .ui-datepicker
        display none

    .ui-widget
        font-size .9em

    .ui-autocomplete
        width auto !important
        max-width 500px

        .ui-menu-item
            & > a
                white-space nowrap
                text-overflow ellipsis
                max-width 100%
                overflow hidden

                .icon16
                    position relative
                    top 2px
                    vertical-align baseline
                    margin 0 4px 0 0

.t-error
    display inline-block
    margin 2px 0 0
    font-size: 0.9em;
    font-weight: bold;
    font-style: italic;
    color: red;

.errormsg
    margin 2px 0 0

h1
h2
h3
h4
h5
h6
    &:last-child
        margin-bottom 0

p
    &:first-child
        margin-top 0

    &:last-child
        margin-bottom 0

.editable
    &:hover
        background: #eed;
        cursor: text;