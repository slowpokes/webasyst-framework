// Main
.t-dialog-wrapper
    position absolute
    top 0
    left 0
    box-sizing border-box
    background #fff

    border 1px solid #888
    border-radius 2px
    box-shadow: 0 1px 5px rgba(0,0,0,0.13);

    &.is-full-screen
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        background transparent
        border: 0;
        border-radius 0
        box-shadow none

        .t-dialog-background
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            box-sizing border-box
            background rgba(255,255,255,.8)

        .t-dialog-block
            position absolute
            top 0
            left 0
            box-sizing border-box
            background #fff

            border: 5px solid #f3f3f3;
            border-radius 4px
            box-shadow: 0 0 70px #bbb;

            &.is-animated
                transition all 200ms linear

            form
                overflow visible

    .t-dialog-block
        .t-dialog-header
            padding ($pad * 2) ($pad * 2) $pad ($pad * 2)

        .t-dialog-content
            padding 0 ($pad * 2)

            &.is-long-content
                overflow auto
                box-sizing border-box

    .t-dialog-footer
        margin 2em 0 0
        padding 0 ($pad * 2) ($pad * 2) ($pad * 2)

        .icon16
            vertical-align: baseline;
            position: relative;
            top: 3px;
            margin: 0 0 0 4px;

        .t-actions
            .t-layout
                //table-layout fixed

                .t-column
                    vertical-align middle

            .t-button
                display inline-block
                vertical-align middle
                margin 0 0 0 1em
                cursor pointer

                &:first-child
                    margin-left 0

                .icon16
                    position relative
                    top 3px
                    vertical-align baseline

// Access
.t-access-dialog
    .t-dialog-block
        width 600px

        .t-dialog-header
            position relative
            padding $pad
            background #defbce

            .t-text
                line-height 16px

            .t-app
                font-weight bold

                .t-icon
                    margin 0 4px 0 0
                    background-position 50%
                    background-size 16px 16px

            .t-user
                margin 0 4px 0 0
                font-weight bold

                &:after
                    content "â†’"
                    padding 0 0 0 4px
                    color #888

                .t-userpic
                    vertical-align top
                    border-radius 50%
                    margin 0 4px 0 0
                    background-position 50%
                    background-size 16px 16px

                .t-group-icon
                    vertical-align top
                    margin 0 4px 0 0
                    background-position 50%
                    background-size 16px 16px


        .t-dialog-content
            padding $pad
            min-height 100px

            .t-access-list
                text-align center

                .t-access-item
                    display inline-block
                    vertical-align top
                    padding $pad
                    text-align center
                    min-width 100px
                    border solid rgba(0,0,0,.05)
                    border-width 1px 0 1px 1px
                    box-sizing border-box
                    cursor pointer

                    &:first-child
                        border-radius 2px 0 0 2px

                    &:last-child
                        border-width 1px
                        border-radius 0 2px 2px 0

                    &.is-active
                        border-width 1px

                        & + .t-access-item
                            border-left 0

                        &.type-no
                            background #f0f0f0
                            color #888

                        &.type-limited
                            background #e6fcda
                            color #888

                        &.type-full
                            background #cbf9b1
                            color #666

            .t-limited-access-form
                margin $pad 0 0

                form
                    overflow: auto;
                    max-height: 500px;
                    font-size: 12px;

                select
                    max-width 120px

            .c-access-app-limited
                table.zebra
                    td
                        padding: .5em;
                        text-align: center;
                        border-bottom: solid 1px #eee;
                        background:#fff !important

                        &:first-child
                            text-align left
                            vertical-align middle

                            div
                                max-width 300px;
                                padding 3px 0
                                line-height (14/12)em
                                box-sizing border-box
                                overflow: hidden;

                        div
                            position: relative;

                            b
                                font-weight: normal;
                                color: #333;

                    th
                        padding: .5em;
                        text-align: center;

                        span.float-right
                            margin:  0 0 -1.05em 0

                    .c-access-cb-all
                        margin-left 18px

                        input
                            margin: 0 4px 0 0;
                            vertical-align: middle;

                    .c-access-cb-all.nm
                        margin-left 0

                    .c-access-subcontrol-header
                        td
                            background: #fff !important

                            &:first-child
                                div
                                    font-weight bold

                    .c-access-subcontrol-item
                        td
                            &:first-child
                                div
                                    padding-left: 20px;
                                    color: #333;

            .t-hint
                margin 1em 0 0
                font-size .9em

        .t-dialog-footer
            margin 0

            .t-notice
                display none
                margin 0 0 0 4px

                &.is-visible
                    display inline-block

