// Calendar :: Event
.t-edit-event-popup
.t-event-popup
    .t-dialog-block
        width 500px

        .t-dialog-header
            padding 0

            .t-status-toggle
                text-align center
                background #f0f0f0
                padding 0

                .t-toggle-button
                    position relative
                    display inline-block
                    vertical-align top
                    padding ( $pad * 1.5 ) $pad
                    width 50%
                    box-sizing border-box
                    cursor pointer

                    .t-name
                        color $link_c
                        border-bottom: 1px dotted $link_c

                    &.is-inactive
                        cursor default

                        .t-name
                            color: inherit
                            border-color transparent


                    &.is-active
                        color #000
                        font-weight bold
                        cursor default

                        &:after
                            content ""
                            position absolute
                            bottom 0
                            left 50%
                            margin 0 0 0 -10px
                            border 10px solid transparent
                            border-bottom-color #fff

                        .t-name
                            color: inherit
                            border-color transparent

        .t-dialog-content
            padding-top 1em
            max-height: 500px
            //overflow hidden
            overflow-y auto

            .t-user-toggle
            .t-calendar-toggle
                & > li
                    margin 0
                    padding 0
                    line-height 1.25em
                    display block

                    &:hover
                        background transparent

                .t-selected-item
                    display inline-block
                    position relative
                    padding 0 28px 0 0
                    margin 0
                    max-width: 100%;
                    box-sizing border-box
                    white-space nowrap
                    text-overflow ellipsis
                    overflow: hidden
                    color $link_c

                    &:hover
                        color $link_c !important

                    .is-bold
                        font-weight bold

                    .icon16
                        position relative
                        top 3px
                        margin-right 5px
                        vertical-align baseline

                    &:after
                        $_icon_w = 8px
                        $_icon_h = 6px

                        content: "";
                        position: absolute;
                        top: 50%;
                        right: 15px;
                        width: 0;
                        height: 0;
                        margin (-($_icon_h/4)) (-($_icon_w/2)) 0 0
                        border solid transparent
                        border-width $_icon_h ($_icon_w/2)
                        border-top-color #7c878c

                .menu-v
                    width: 200px
                    max-height 200px
                    overflow auto

                    li
                        a
                            padding: 6px 8px 6px 24px;
                            margin: -6px -8px -6px -24px;

                            b
                                font-weight normal

                            i
                                font-style normal

            .t-event-form
                .field
                    display table
                    width 100%
                    margin .5em 0 0
                    padding 0
                    table-layout fixed

                    &.is-hidden
                        display none

                    &:first-child
                        margin-top 0

                    .name
                    .value
                        float: none
                        margin: 0
                        padding 0
                        display table-cell
                        vertical-align top

                    .name
                        width 100px
                        padding: 0.45em 1em 0 0;

                    .value
                        width auto

                        &.no-shift
                            & > :first-child
                                margin-top -2px

                        select
                            max-width 100%

                        input[type="text"]
                            min-width 0
                            width 100%
                            box-sizing border-box

                        textarea
                            min-width auto
                            width 100%
                            box-sizing border-box
                            resize vertical

                    &.date-toggle
                        .value
                            vertical-align middle

            .t-date-wrapper
                width 100%
                table-layout fixed

                &.is-extended
                    .right
                        visibility visible

                .left
                    padding-right .5em

                .right
                    visibility hidden
                    padding-left .5em

                .t-date
                    min-width auto
                    width 100%

            .t-calendar-name
            .t-user-name
            .t-event-name
            .t-description
            .t-location
            div.t-date
                line-height 22px

            .t-calendar-name
            .t-user-name
                .icon16
                    position relative
                    top 3px
                    margin 0 6px 0 0
                    vertical-align baseline


            .t-source-wrapper
                .line
                    line-height 20px
                    max-width 100%
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap

                .t-plugin-icon
                    position relative
                    top 3px
                    margin 0 4px 0 0
                    vertical-align baseline

        .t-dialog-footer
            .t-actions
                padding 0 1em 0 0

                .t-layout
                    //table-layout fixed

                    .t-column
                        vertical-align middle

                .t-button
                    display inline-block
                    vertical-align middle
                    margin 0 0 0 1em
                    cursor pointer

                    &:first-child
                        margin-left 0

                    .icon16
                        position relative
                        top 3px
                        vertical-align baseline

                a.t-button
                    padding 3px 18px 4px
                    height auto

