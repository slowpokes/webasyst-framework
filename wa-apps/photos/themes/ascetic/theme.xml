<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE theme PUBLIC "wa-app-theme" "http://www.webasyst.com/wa-content/xml/wa-app-theme.dtd">
<theme id="ascetic" system="1" vendor="webasyst" author="Webasyst" app="photos" version="1.1.0">
    <name locale="en_US">Ascetic (Default 1.0)</name>
    <name locale="ru_RU">Аскетик (Default 1.0)</name>
    <files>
        <file path="index.html" custom="0">
            <description locale="en_US">Common layout</description>
            <description locale="ru_RU">Основной макет</description>
        </file>
        <file path="ascetic.css" custom="0">
            <description locale="en_US">Core CSS file</description>
            <description locale="ru_RU">Основной файл CSS-стилей</description>
        </file>
        <file path="mobile.css" custom="0">
            <description locale="en_US">Additional CSS for multi-touch mobile devices</description>
            <description locale="ru_RU">Дополнительный CSS для мобильных устройств</description>
        </file>        
        <file path="view-thumbs.html" custom="0">
            <description locale="en_US">Photo thumbnail list view</description>
            <description locale="ru_RU">Список фотографий эскизами</description>
        </file>
        <file path="view-plain.html" custom="0">
            <description locale="en_US">Photo plain list view</description>
            <description locale="ru_RU">Список фотографий «простыней»</description>
        </file>
        <file path="photo.html" custom="0">
            <description locale="en_US">One photo and its details</description>
            <description locale="ru_RU">Просмотр фотографий по одной</description>
        </file>
        <file path="home.html" custom="0">
            <description locale="en_US">Wrapper for the main photo gallery homepage</description>
            <description locale="ru_RU">Обертка для главной страницы фотогалереи</description>
        </file>
        <file path="album.html" custom="0">
            <description locale="en_US">Wrapper for photo album</description>
            <description locale="ru_RU">Обертка для альбома фотографий</description>
        </file>
        <file path="search.html" custom="0">
            <description locale="en_US">Wrapper for photo search (filtering) results, e.g. by tag or by rating</description>
            <description locale="ru_RU">Обертка для страницы поиска (фильтрации) фотографий, например, по тегу или автору</description>
        </file>
        <file path="page.html" custom="0">
            <description locale="en_US">Static page content</description>
            <description locale="ru_RU">Содержимое информационной страницы</description>
        </file>
        <file path="sidebar.html" custom="0">
            <description locale="en_US">Navigation sidebar</description>
              <description locale="ru_RU">Колонка с навигацией по фотогалерее</description>
        </file>
        <file path="login.html">
            <description locale="en_US">Login page</description>
            <description locale="ru_RU">Страница входа для пользователей</description>
        </file>
        <file path="signup.html">
            <description locale="en_US">Sign up page</description>
            <description locale="ru_RU">Страница регистрации пользователей</description>
        </file>
        <file path="forgotpassword.html">
            <description locale="en_US">Forgot password page</description>
            <description locale="ru_RU">Страница сброса пароля</description>
        </file>
        <file path="error.html">
            <description locale="en_US">404 and other errors</description>
            <description locale="ru_RU">404 и другие ошибки</description>
        </file>
        <file path="lazyloading.js">
            <description locale="en_US">Lazy loading JS</description>
            <description locale="ru_RU">Скрипты загрузки контента «на лету»</description>
        </file>
    </files>
    <settings>
        <setting var="nav_bg_color" control_type="color">
            <value>#000000</value>
            <name locale="en_US">Top navigation menu background color</name>
            <name locale="ru_RU">Цвет фона верхнего навигационного меню</name>
        </setting>
        <setting var="nav_text_color" control_type="color">
            <value>#CCCCCC</value>
            <name locale="en_US">Top navigation menu text color</name>
            <name locale="ru_RU">Цвет ссылок в верхнем навигационном меню</name>
        </setting>
    </settings>
    <thumbs>
        <thumb>200x0</thumb>
        <thumb>970</thumb>
    </thumbs>
</theme>
