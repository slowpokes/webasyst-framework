// Vars
@import "../../../../site/themes/mobile/styl/variables.styl";

.wa-photo-wrapper
    padding: 0.5em;

    .album-name
        margin: 0 0 0 0.5rem;

    .album-note
        margin: 0.5rem;

    .album-description
        margin: 0.5rem 0;

    .albums-wrapper

        .albums-header
            margin: 0 0 0 0.5rem;
            padding: 0;

        .album-item
            margin: 0.5em 0 0;

            &:first-child
                margin-top: 0;

            .album-link
                position: relative;
                display block;

                .image-block
                    display block
                    width: 100%;
                    height: 10em;
                    background #fff 50% 50% no-repeat;
                    background-size cover;
                    $box-shadow(0 0 5px 0 rgba(0,0,0,0.1));

                    img
                        display none;

                .text-block
                    display block
                    position absolute
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    padding: 0.5rem
                    background rgba(0,0,0,0.25)

                    color: #fff;
                    font: normal 0.9em/1 $font-family;
                    box-sizing border-box

                    .album-name
                    .album-count
                        display: block;

                    .album-count
                        margin: 0.5em 0 0;

        & + .photo-list-wrapper
            margin: 0.5em 0 0;

    .photo-list-wrapper
        .photo-item
            margin 0.5em 0 0;

            &:first-child
                margin-top: 0;

            .photo-desc
                margin: 1.25em 0 0.25em 0.5rem;
                padding: 0;

            .image-wrapper
                .image
                    position relative
                    display block;
                    background #fff 50% no-repeat;
                    background-size contain;
                    text-align center
                    $box-shadow(0 0 5px 0 rgba(0,0,0,0.1));

                    .indicator
                        position absolute
                        font-size: 1rem;
                        line-height 1rem;
                        top: 0.5em;
                        right: 0.5em;

                        min-width 1em
                        text-align center

                        padding: 0.5rem;
                        $border-radius(1rem);
                        background rgba(0,0,0,0.5);
                        color: #fff;

                    .stack
                        padding: 0.5rem 0
                        line-height 1rem;

                        .stack-nav
                            font-size: 1rem;
                            line-height: (40/16)

                            a
                                display inline-block
                                vertical-align top
                                line-height 0

                    & > a img
                    & > img
                        height: auto !important
                        width: 100% !important
                        vertical-align: middle;

    .photo-page-wrapper

        .photo-wrapper
            background #fff
            $box-shadow(0 0 5px 0 rgba(0,0,0,0.1));

            .image-wrapper
                text-align center
                min-height 8em;

                .image-link
                    display block
                    text-decoration none
                    font-size: 0
                    line-height 0

                    img
                        height: auto !important
                        width: 100% !important

        .photo-desc-wrapper
            padding: 0.5em;

            .line
                margin: 1em 0 0;

                &:first-child
                    margin-top: 0;

            .stack
                padding: 0.5rem 0

                .stack-nav
                    font-size: 1rem;
                    line-height: (40/16)
                    text-align center

                    a
                        display inline-block
                        vertical-align top
                        line-height 0

        .plugin-wrapper

            .star
            .star-half
            .star-hover
            .star-empty
                color: $star-color;

                &:before
                    display: inline-block;
                    width: 1em;
                    font: normal 1em/1em "fontello";
                    text-decoration: none;
                    text-transform: none;
                    text-align: center;

            .star-half:before
                content: '\e802';

            .star:before
            .star-hover:before
                content: '\e800';

            .star-empty:before
                content: '\e801';

            & > p
                $default-block()

                .p-rate-photo
                    font-size: 2em

                .hint
                    display inline-block
                    vertical-align middle
                    margin: 0 0 0 1rem
                    font-size: 1.25rem

                .p-rate
                    font-size: 1rem

                    .p-rate-photo
                        display block
                        margin: 0 0 1rem 0

            .comments

                .comments-header
                    margin-left: 0.5rem

                & > ul
                    $default-block()

                ul
                    list-style none

                    li
                        margin: 0
                        list-style none


                        &:first-child
                            margin-top: 0

                        li
                            margin: 0.5rem 0 0 3rem

                            .comment
                                position relative
                                border-width 0 0 0 1px

                                &:after
                                    position absolute
                                    top: -0.1rem;
                                    right: 100%;
                                    margin: 0 0.5rem 0 0
                                    content: ""
                                    opacity: 0.33
                                    width: 2.5rem
                                    height: 2.5rem
                                    background transparent url("../../../site/themes/mobile/img/icons/arrow-child.png") 50% no-repeat
                                    background-size: 1em

                .comment
                    margin: 0
                    padding: 0.5em
                    background #fcfcfc
                    border: solid rgba(0,0,0,0.1)
                    border-width 1px 0 0 0

                    .credentials
                        & > a
                            display inline-block
                            margin: 0 0.25rem 0 0
                            font-size: 0
                            line-height 0
                            vertical-align top

                            img
                                max-width 1.25rem
                                $border-radius(50%)

                        .date
                            display inline-block
                            font-size: 0.8rem
                            color: #aaa

                    .text
                        margin: 0.5rem 0

                    .actions
                        text-align right

            .comment-form
                $default-block()

                h4
                    font-size: 1.35rem

                .comment-form-fields
                    p
                        line-height 1.3em

                        /*label*/
                            /*display none*/

                        img
                            vertical-align top
                            max-width 1.25rem
                            $border-radius(50%)

                #user-auth-provider
                    list-style none

                    li
                        display inline-block
                        vertical-align top

                        margin: 0
                        padding: 0;

                        a
                            display block

                            margin: 0 0.25em 0.25em 0;
                            padding: 0.5em;

                            border: 1px solid rgba(0,0,0,0.1)

                            $border-radius(3px)

                            font-size: 0.9em

                            color $color-black
                            text-decoration none

                            background: #fcd630;
                            background: #fcd630 -moz-linear-gradient(top, rgba(255,255,255,0.5) 0%, rgba(255,255,255,0.0) 100%);
                            background: #fcd630 -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0.5)), color-stop(100%,rgba(255,255,255,0.0)));
                            background: #fcd630 -webkit-linear-gradient(top, rgba(255,255,255,0.5) 0%,rgba(255,255,255,0.0) 100%);
                            background: #fcd630 -o-linear-gradient(top, rgba(255,255,255,0.5) 0%,rgba(255,255,255,0.0) 100%);
                            background: #fcd630 -ms-linear-gradient(top, rgba(255,255,255,0.5) 0%,rgba(255,255,255,0.0) 100%);
                            background: #fcd630 linear-gradient(to bottom, rgba(255,255,255,0.5) 0%,rgba(255,255,255,0.0) 100%);

                            img
                                vertical-align middle
                                margin: 0 0.2rem 0 0;

                .wa-captcha
                    strong
                    .wa-captcha-refresh
                        display none

                .comment-submit
                    margin: 1rem 0 0

                    .hint
                        display none